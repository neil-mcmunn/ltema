<Alloy>
	<NavigationWindow id="navGroupWin">
		<Window class="container" title="Site Surveys" id="siteSurveysWin">
			<RightNavButton>
				<Button id="editSite" title="Edit" onClick="editBtn" />
			</RightNavButton>
			<LeftNavButton>
				<Button id="login" title="Login" onClick="loginBtn" />
			</LeftNavButton>
			<TableView class="table" id="tbl">
				<HeaderView id="mainHeader">
					<View id="headerView">
						<Button id="addSite" title="Add Site Survey" onClick="addBtn"/>

						<Button id="refreshBtn" title="Refresh List" onClick="refreshBtn" />
					</View>
				</HeaderView>
				<FooterView id="mainFooter">
					<View id="footerView">
						<Button id="exportData" title="Export" onClick="exportBtn"/>
					</View>
				</FooterView>
			</TableView>
		</Window>
	</NavigationWindow>
</Alloy>