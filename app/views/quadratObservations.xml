<Alloy>
	<Window class="container" title="Quadrat Observations" id="quadratObservationsWin">
		<RightNavButton>
			<Button id="editObservation" title="Edit" onClick="editBtn"/>
		</RightNavButton>
		
		<TableView class="table" id="tbl">
			<HeaderView id="mainHeader">
				<View id="headerView">
					<Button id="addObservation" title="Add Quadrat Observation" />
				</View>
			</HeaderView>
			
			<FooterView id="tblFooter">
				<View id="footerView">
					<Label id="countLbl" text="Total Count: "/>
					<Label id="count" text="squirrel!"/>
					<Label id="countSymbol" text="%" />
					<Button id="done" title="Done" onClick="doneBtn" />
					<Label id="doneError" class="error" />
				</View>
			</FooterView>
		</TableView>
	</Window>
</Alloy>