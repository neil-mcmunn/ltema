<Alloy>
    <Window class="container" title="Three Point Observations" id="threePointObservationsWin">
        <RightNavButton>
            <Button id="editThreePointObservation" title="Edit" onClick="editBtn"/>
        </RightNavButton>

        <TableView class="table" id="tbl">
            <HeaderView id="mainHeader">
                <View id="headerView">
                    <Button id="addThreePointObservation" title="Add Three Point Observation" />
                </View>
            </HeaderView>

            <FooterView id="tblFooter">
                <View id="footerView">
                    <Label id="countLbl" text="Total Count: "/>
                    <Label id="count" text="squirrel!"/>
                    <Label id="countSymbol" text="%" />
                    <Button id="done" title="Done" onClick="doneBtn" />
                    <Label id="doneError" class="error" />
                </View>
            </FooterView>
        </TableView>
    </Window>
</Alloy>